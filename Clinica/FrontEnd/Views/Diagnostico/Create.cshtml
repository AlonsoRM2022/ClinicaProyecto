@model FrontEnd.Models.DiagnosticoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Diagnóstico</h1>
<div class="templatemo-content-wrapper">
    <div class="templatemo-content2">
        <br />
        <div class="templatemo-panels">
            <form asp-action="Create">
                <div class="row">
                    <br />
                    <div class="form-group">
                        <div class="col-md-4">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4">
                            <label asp-for="IdReserva" class="control-label"></label>
                            <br />
                            @Html.DropDownListFor(model => model.IdReserva, new SelectList(Model.Reservas, "IdReserva", "NombreUsuario"), "--Seleccione una reserva--")
                            <span asp-validation-for="IdReserva" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
