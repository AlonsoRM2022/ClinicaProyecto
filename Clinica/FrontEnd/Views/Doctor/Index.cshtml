@model IEnumerable<FrontEnd.Models.DoctorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Doctores</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDoctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusDoctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusDoctor)
            </td>
            <td>
                  <button>  @Html.ActionLink("Edit", "Edit", new { id=item.IdDoctor }) </button>
                  <button>   @Html.ActionLink("Details", "Details", new { id=item.IdDoctor }) </button>
            </td>
        </tr>
}
    </tbody>
</table>
